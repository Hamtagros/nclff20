<form autocomplete="off">
  <div class="form-group">
    <label for="disable-experience-tracking">
      {{localize "SETTINGS.FFd20NoExpN"}}
    </label>
    <div class="form-fields">
      <input type="checkbox" id="disable-experience-tracking" name="disableExperienceTracking" data-dtype="Boolean" {{checked settings.disableExperienceTracking}} />
    </div>
    <p class="notes">{{localize "SETTINGS.FFd20NoExpL"}}</p>
  </div>

  {{#if (not settings.disableExperienceTracking)}}

  <div class="form-group">
    <label for="xp-track">{{localize "SETTINGS.FFd20ExpRateN"}}</label>
    <div class="form-fields">
      <select name="track" id="xp-track">
        {{#select settings.track}}
        <option value="slow">{{localize "FFd20.XPTrackSlow"}}</option>
        <option value="medium">{{localize "FFd20.XPTrackMedium"}}</option>
        <option value="fast">{{localize "FFd20.XPTrackFast"}}</option>
        <option value="customFormula">{{localize "FFd20.XPTrackCustomFormula"}}</option>
        {{/select}}
      </select>
    </div>
    <p class="notes">{{localize "SETTINGS.FFd20ExpRateL"}}</p>
  </div>

  {{#if hasCustomFormula}}
  <div class="form-group">
    <label for="xp-custom-formula">{{localize "FFd20.Formula"}}</label>
    <div class="form-fields">
      <input type="text" placeholder="{{localize "FFd20.XPTrackCustomFormulaHint"}}" name="custom.formula" value="{{settings.custom.formula}}" id="xp-custom-formula" />
    </div>
  </div>
  {{/if}}

  <div class="form-group">
    <label for="open-xp-distributor">
      {{localize "SETTINGS.FFd20OpenXPDistributorN"}}
    </label>
    <div class="form-fields">
      <input type="checkbox" id="open-xp-distributor" name="openXpDistributor" data-dtype="Boolean" {{checked settings.openXpDistributor}} />
    </div>
    <p class="notes">{{localize "SETTINGS.FFd20OpenXPDistributorL"}}</p>
  </div>
  {{/if}}

  <div class="form-group">
    <button type="submit" name="submit" >
      <i class="far fa-save"></i> {{localize "SETTINGS.Save"}}
    </button>
  </div>
</form>
