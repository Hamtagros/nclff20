<div class="spell-description">
  <p>
  <strong>{{localize "FFd20.School"}}</strong>&nbsp;{{{label.school}}}{{#if label.subschool}}&nbsp;({{{label.subschool}}}){{/if}}{{#if label.types}}&nbsp;[{{{label.types}}}]{{/if}};
    {{#if learnedAt.class}}<strong>{{localize "FFd20.Level"}}</strong>&nbsp;{{{learnedAt.class}}};{{/if}}
    {{#if learnedAt.domain}}<strong>{{localize "FFd20.Domain"}}</strong>&nbsp;{{{learnedAt.domain}}};{{/if}}
    {{#if learnedAt.subDomain}}<strong>{{localize "FFd20.SubDomain"}}</strong>&nbsp;{{{learnedAt.subDomain}}};{{/if}}
    {{#if learnedAt.elementalSchool}}<strong>{{localize "FFd20.ElementalSchool"}}</strong>&nbsp;{{{learnedAt.elementalSchool}}};{{/if}}
    {{#if learnedAt.bloodline}}<strong>{{localize "FFd20.Bloodline"}}</strong>&nbsp;{{{learnedAt.bloodline}}};{{/if}}
  </p>
  <p>
  {{#if label.castingTime}}<strong>{{localize "FFd20.CastingTime"}}</strong>&nbsp;{{{label.castingTime}}}<br>{{/if}}
  {{#if label.components}}<strong>{{localize "FFd20.Components"}}</strong>&nbsp;{{{label.components}}}<br>{{/if}}
  </p>
  <p>
  {{#if label.range}}<strong>{{localize "FFd20.Range"}}</strong>&nbsp;{{{label.range}}}<br>{{/if}}
  {{#if label.area}}<strong>{{localize "FFd20.Area"}}</strong>&nbsp;{{{label.area}}}<br>{{/if}}
  {{#if label.targets}}<strong>{{localize "FFd20.Targets"}}</strong>&nbsp;{{{label.targets}}}<br>{{/if}}
  {{#if label.effect}}<strong>{{localize "FFd20.Effect"}}</strong>&nbsp;{{{label.effect}}}<br>{{/if}}
  {{#if label.duration}}<strong>{{localize "FFd20.Duration"}}</strong>&nbsp;{{{label.duration}}}<br>{{/if}}
    {{#if useDCandSR}}
      <strong>{{localize "FFd20.SavingThrow"}}</strong>&nbsp;{{{label.savingThrow}}};&nbsp;
      <strong>{{localize "FFd20.SpellResistance"}}</strong>&nbsp;{{{label.sr}}}<br>
    {{/if}}
  </p>
</div>
