<div class="form-group">
  <label>{{localize "FFd20.Size"}}</label>
  <select name="data.size">
    {{#select data.size}}
    {{#each config.actorSizes as |name type|}}
    <option value="{{type}}">{{name}}</option>
    {{/each}}
    {{/select}}
  </select>
  <label for="data.resizing">{{localize "FFd20.Resizing"}}</label>
  <input type="checkbox" name="data.resizing" data-dtype="Boolean" {{checked data.resizing}}>
</div>
